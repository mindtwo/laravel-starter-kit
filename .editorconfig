root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.blade.php]
indent_size = 2

[**/emails/**/*.blade.php]
indent_size = 0

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
