{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "enabledManagers": [
        "composer",
        "npm"
    ],
    "rangeStrategy": "widen",
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": false
    },
    "packageRules": [
        {
            "matchManagers": [
                "composer"
            ],
            "groupName": "composer (minor & patch)",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": [
                "composer"
            ],
            "groupName": "composer (major)",
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        },
        {
            "matchManagers": [
                "npm"
            ],
            "groupName": "npm (minor & patch)",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": [
                "npm"
            ],
            "groupName": "npm (major)",
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        },
        {
            "matchManagers": [
                "npm",
                "composer"
            ],
            "matchDepTypes": [
                "devDependencies",
                "require-dev"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "dev deps (minor & patch)",
            "automerge": true,
            "automergeType": "branch"
        }
    ]
}
